{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ]
        },
        {
            "type": "npm",
            "script": "install",
            "problemMatcher": []
        },
        {
            "label": "restart node-red",
            "type": "shell",
            "command": "cd ~/node-red/ && docker-compose down && docker-compose up&",
            "problemMatcher": []
        },
        {
            "type": "npm",
            "script": "watch",
            "problemMatcher": [
                "$gulp-tsc"
            ]
        }
    ]
}